{
  "manifest_version": 2,
  "name": "Timeline.fm",
  "version": "0.1.0",
  "description": "Display your scrobbled songs on your Google Maps Timeline",

  "background": {
    "scripts": ["oninstall.js"],
    "persistent": false
  },

  "content_scripts": [{
    "js": [
      "lib/moment.min.js",
      "timeline.js",
      "lastfm.js",
      "main.js"
    ],
    "matches": ["https://www.google.com/maps/timeline*"],
    "run_at": "document_start"
  }],

  "options_ui": {
    "page": "options_page.html",
    "chrome_style": true,
    "open_in_tab": true
  },

  "permissions": [
    "notifications",
    "storage",
    "https://ws.audioscrobbler.com/"
  ]
}
